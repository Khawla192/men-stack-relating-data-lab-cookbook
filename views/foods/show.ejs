<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= food.name %>
    </title>
</head>

<body>
    <%- include('../partials/_navbar.ejs') %>
        <h1>
            <%= user.username%>
        </h1>
        <ul>
            <% for (const food of foods) { %>
                <li><%= food.name %></li>
            <% } %>
        </ul>
        <a href="/users/<%= user._id %>/foods/<%= food._id %>/edit">
            Edit Food
        </a>
        <form action="/users/<%= user._id %>/food/<%= food._id %>?_method=DELETE" method="POST">
            <button type="submit">Delete food</button>
        </form>

</body>

</html>